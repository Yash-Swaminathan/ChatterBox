{
  "name": "chatterbox-server",
  "version": "1.0.0",
  "description": "ChatterBox - Real-time messaging platform backend",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "cross-env NODE_ENV=test jest",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "migrate": "node src/database/migrate.js run",
    "migrate:status": "node src/database/migrate.js status",
    "db:test": "node src/database/test-connection.js"
  },
  "keywords": [
    "chat",
    "messaging",
    "real-time",
    "socket.io"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@socket.io/redis-adapter": "^8.3.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.6",
    "multer": "^2.0.2",
    "obscenity": "^0.4.5",
    "pg": "^8.16.3",
    "redis": "^5.10.0",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "validator": "^13.15.23"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
